pipeline {
    agent any  // Use 'agent any' to specify where the pipeline will run

    stages {
        stage('Check Validate') {
            steps {
                echo 'Validating the Program'
            }
        }

        stage('Compilation') {
            steps {
                echo 'Compiling the Program'
            }
        }

        stage('Installation') {
            steps {
                echo 'Installing the Program'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the Program'
            }
        }
    }
}
